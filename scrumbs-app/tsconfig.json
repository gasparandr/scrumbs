{
	"compilerOptions": {
		"alwaysStrict": true,
    	"declaration": false,
    	"declarationMap": false,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
    	"noEmit": false,
    	"noEmitHelpers": false,
    	"noEmitOnError": true,
    	"noErrorTruncation": true,
    	"noUnusedLocals": false,
    	"noUnusedParameters": false,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"lib": [
			"esnext", "dom"
		],
		"module": "commonjs",
		"target": "es2015",
		"outDir": "./build"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
}
